{
    "compilerOptions": {
        "noImplicitReturns": true,
        "outDir": "./dist/",
        "alwaysStrict": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "noFallthroughCasesInSwitch": true,
        "allowUnusedLabels": true,
        "module": "esnext",
        "lib": [
            "ESNext",
            "dom"
        ],
        "skipLibCheck": true,
        "target": "es2015",
        "jsx": "react",
        "pretty": true,
        "allowJs": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": [
            "vite/client",
            "monaco-editor/monaco",
        ],
        "paths": {
            "@/*": [
                "./app/*"
            ]
        }
    },
    "exclude": [
        "./__tests__/*",
        "./dist/*"
    ]
}
{
    "name": "ucloud",
    "version": "2026.1.39",
    "description": "UCloud",
    "type": "module",
    "author": "IMADA - eScience Center, SDU",
    "scripts": {
        "start": "vite",
        "start:local": "vite --mode local-dev",
        "start:compose": "vite --mode compose",
        "start:sandbox": "vite --mode sandbox",
        "start:prod": "vite --mode prod",
        "watch": "tsc --watch --noEmit",
        "build": "node scripts/update-version-file.js && vite build",
        "serve": "vite preview",
        "icons-clean": "cd app/ui-components/icons; rm -rf components index.ts",
        "icons-components": "cd app/ui-components/icons; svgr . --ext=tsx --filename-case camel -d components && rm -f components/index.tsx",
        "icons-index": "node scripts/create-icons-index.js",
        "refresh-icons": "npm run icons-clean && npm run icons-components && npm run icons-index",
        "test": "npx playwright test",
        "test-ui": "npx playwright test --ui",
        "test-headed": "npx playwright test --headed",
        "test-report": "npx playwright show-report"
    },
    "dependencies": {
        "@novnc/novnc": "1.5.0",
        "@observablehq/plot": "0.6.17",
        "@reduxjs/toolkit": "2.11.2",
        "@svgr/cli": "8.1.0",
        "apexcharts": "4.7.0",
        "assert": "2.1.0",
        "d3": "7.9.0",
        "d3-array": "3.2.4",
        "d3-scale": "4.0.2",
        "d3-selection": "3.0.0",
        "d3-shape": "3.2.0",
        "d3-time-format": "4.1.0",
        "d3-zoom": "3.0.0",
        "date-fns": "4.1.0",
        "deepcopy": "2.1.0",
        "fast-deep-equal": "3.1.3",
        "fuse.js": "7.1.0",
        "immer": "10.2.0",
        "jsrsasign": "11.1.0",
        "localforage": "1.10.0",
        "magic-bytes.js": "1.12.1",
        "mermaid": "11.12.2",
        "monaco-editor": "0.55.1",
        "monaco-vim": "0.4.2",
        "react": "19.2.4",
        "react-apexcharts": "1.8.0",
        "react-datepicker": "9.0.0",
        "react-dom": "19.2.4",
        "react-markdown": "10.1.0",
        "react-modal": "3.16.3",
        "react-redux": "9.2.0",
        "react-router": "7.13.0",

<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>

        <Console name="jargon">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name="org.irods.jargon" level="error" additivity="false">
            <AppenderRef ref="jargon"/>
        </Logger>
        <Root level="debug">
        </Root>
    </Loggers>
</Configuration>
{
  "settings": {
    "analysis": {
      "analyzer": {
        "path-analyzer": {
          "type": "custom",
          "tokenizer": "path-tokenizer"
        },

        "extension-analyzer": {
          "type": "custom",
          "tokenizer": "extension-tokenizer",
          "filter": ["lowercase"]
        }
      },

      "tokenizer": {
        "path-tokenizer": {
          "type": "path_hierarchy",
          "delimiter": "/"
        },

        "extension-tokenizer": {
          "type": "path_hierarchy",
          "delimiter": ".",
          "reverse": "true"
        }
      }
    }
  },
  "mappings": {
    "doc": {
      "properties": {
        "path": {
          "type": "text",
          "analyzer": "path-analyzer",
          "search_analyzer": "keyword"
        },
        "fileName": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword"
            },

            "extension": {
              "type": "text",
              "analyzer": "extension-analyzer",
              "search_analyzer": "keyword"
            }
          }
        },
        "fileDepth": {
          "type": "long"
        },
        "id": {
          "type": "keyword"
        },
        "fileType": {
          "type": "keyword"
        },
        "owner": {
          "type": "keyword"
        },
        "size": {
          "type": "long"
        },
        "fileTimestamps": {
          "type": "object"
        },
        "checksum": {
          "type": "object"
        },
        "fileIsLink": {
          "type": "boolean"
        },
        "linkTarget": {
          "type": "text"
        },
        "linkTargetId": {
          "type": "text"
        },
        "sensitivity": {
          "type": "keyword"
        },
        "annotations": {
          "type": "text",
          "fields": {
            "keyword": {
              "type": "keyword",
              "ignore_above": 256
            }
          }
        }
      }
    }
  }
}